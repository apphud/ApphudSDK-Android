<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Apphud" parent="Theme.AppCompat.Light.NoActionBar">
         <!-- Primary brand color. -->
        <item name="colorPrimary">@color/branding_blue</item>
        <item name="colorPrimaryVariant">@color/branding_blue</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/branding_blue</item>
        <item name="colorSecondaryVariant">@color/branding_blue</item>
        <item name="colorOnSecondary">@color/white</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.App.Starting" parent="Theme.SplashScreen">
        <!--
        item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowFullscreen">true</item>
        -->

        <!-- Set the splash screen background to black -->
        <item name="windowSplashScreenBackground">@android:color/white</item>
        <!-- Use windowSplashScreenAnimatedIcon to add a drawable or an animated drawable. -->
        <item name="windowSplashScreenAnimatedIcon">@drawable/splash_screen</item>
        <!-- Set the theme of the Activity that follows your splash screen. -->
        <item name="postSplashScreenTheme">@style/Theme.Apphud</item>
    </style>

    <style name="Theme.Apphud.Main" parent="Theme.AppCompat.Light">
        <item name="windowNoTitle">true</item>-
        <item name="colorPrimary">@color/branding_blue</item>
        <item name="colorPrimaryVariant">@color/branding_blue</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/branding_blue</item>
        <item name="colorSecondaryVariant">@color/branding_blue</item>
        <item name="colorOnSecondary">@color/white</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
    </style>

    <style name="button_blue" parent="@android:style/Widget.Button">
        <item name="android:gravity">center_vertical|center_horizontal</item>
        <item name="android:textSize">17sp</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textAllCaps">false</item>>
        <item name="android:background">@drawable/button_blue</item>
        <item name="android:focusable">true</item>
        <item name="android:clickable">true</item>
        <item name="android:includeFontPadding">false</item>
    </style>

    <style name="button_blue_2" parent="@android:style/Widget.Button">
        <item name="android:gravity">center_vertical|center_horizontal</item>
        <item name="android:textSize">24sp</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textAllCaps">false</item>>
        <item name="android:background">@drawable/button_blue</item>
        <item name="android:focusable">true</item>
        <item name="android:clickable">true</item>
        <item name="android:includeFontPadding">false</item>
    </style>

    <style name="button_brown" parent="@android:style/Widget.Button">
        <item name="android:gravity">center_vertical|center_horizontal</item>
        <item name="android:textSize">14sp</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textAllCaps">false</item>>
        <item name="android:background">@drawable/button_brown</item>
        <item name="android:focusable">true</item>
        <item name="android:clickable">true</item>
        <item name="android:includeFontPadding">false</item>
    </style>

    <style name="ProgressBarStyle">
        <item name="colorAccent">@color/branding_blue</item>
    </style>

</resources>