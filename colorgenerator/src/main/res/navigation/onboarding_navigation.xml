<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/onboarding_navigation.xml"
    app:startDestination="@id/onboardingFragment">

    <fragment
        android:id="@+id/onboardingFragment"
        android:name="com.apphud.sampleapp.ui.onboarding.WelcomeFragment"
        android:label="fragment_onboarding"
        tools:layout="@layout/fragment_welcome" >
        <action
            android:id="@+id/action_onboardingFragment_to_introFragment"
            app:destination="@id/introFragment" />
    </fragment>
    <fragment
        android:id="@+id/introFragment"
        android:name="com.apphud.sampleapp.ui.onboarding.IntroFragment"
        android:label="IntroFragment"
        tools:layout="@layout/fragment_intro">
        <action
            android:id="@+id/action_introFragment_to_unlimitedFragment"
            app:destination="@id/unlimitedFragment" />
    </fragment>
    <fragment
        android:id="@+id/unlimitedFragment"
        android:name="com.apphud.sampleapp.ui.onboarding.UnlimitedFragment"
        android:label="UnlimitedFragment"
        tools:layout="@layout/fragment_unlimited">
        <action
            android:id="@+id/action_unlimitedFragment_to_paywallFragment"
            app:destination="@id/paywallFragment" />
    </fragment>
    <fragment
        android:id="@+id/paywallFragment"
        android:name="com.apphud.sampleapp.ui.paywall.PaywallFragment"
        android:label="PaywallFragment"
        tools:layout="@layout/fragment_paywall">
        <argument
            android:name="placement_id"
            app:argType="string" />
    </fragment>
</navigation>